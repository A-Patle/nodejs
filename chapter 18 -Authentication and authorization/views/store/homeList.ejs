<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Here are our registered homes:
      </h2>
      <ul class="space-y-4">
          <% registeredHouse.forEach(home => { %>
        <li class="bg-gray-100 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300 flex gap-4 items-center">
        <img src="https://www.shutterstock.com/shutterstock/photos/2376758765/display_1500/stock-photo-booking-airbnb-pleace-for-rest-lake-forest-2376758765.jpg" 
     alt="<%= home.houseName %> photo" 
     class="object-cover rounded-md border"
     style="width: 64px; height: 64px;" />
        <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-1"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-1">Location: <span class="font-medium"><%= home.location %></span></p>
              <p class="text-gray-600 mb-1">Price: <span class="font-medium"><%= home.price %></span></p>
              <p class="text-yellow-500 font-semibold">Rating: <%= home.rating %> ‚≠ê</p>
              <p class="text-gray-600 mb-1">Description: <span class="font-medium"><%= home.description %></span></p>
              <a href="/homes/<%= home._id %>" class="bg-blue-300 p-2">Details</a>

                   <%- include('../partials/favourite',{home:home}) %>

            </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>