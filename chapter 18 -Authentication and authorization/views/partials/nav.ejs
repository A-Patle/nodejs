<header class="bg-red-500 text-white p-4 shadow-md sticky top-0 z-50">
  <nav class="container mx-auto flex justify-between items-center">
    <!-- Main Navigation -->
    <ul class="flex items-center space-x-4">
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >airbnb</a
        >
      </li>

      <% if(isLoggedIn){ %> <% if(user && user.userType === 'guest'){ %>

      <li>
        <a
          href="/homes"
          class="<%= currentPage === 'home' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Homes</a
        >
      </li>
      <li>
        <a
          href="/favourites"
          class="<%= currentPage === 'favouriteList' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Favourites</a
        >
      </li>
      <li>
        <a
          href="/bookings"
          class="<%= currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Bookings</a
        >
      </li>
      <% } else { %>
      <li>
        <a
          href="/host/add-home"
          class="<%= currentPage === 'addHome' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Add Home</a
        >
      </li>
      <li>
        <a
          href="/host/host-homes-list"
          class="<%= currentPage === 'hostHomes' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Host Homes</a
        >
      </li>
      <% } %> <% } %>
    </ul>

    <!-- Auth Navigation -->
    <ul class="flex items-center space-x-4">
      <% if(!isLoggedIn) { %>
      <li>
        <a
          href="/signup"
          class="<%= currentPage === 'signup' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Sign Up</a
        >
      </li>
      <li>
        <a
          href="/login"
          class="<%= currentPage === 'login' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Login</a
        >
      </li>
      <% } else { %>
      <li>
        <form action="/logout" method="POST">
          <button
            type="submit"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300 flex items-center">
            Logout
          </button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
