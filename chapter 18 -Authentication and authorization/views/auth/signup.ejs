<%- include('../partials/head') %>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-8 p-8 max-w-xl">
    <div class="bg-white rounded-lg shadow-xl p-8 border border-gray-200">
      <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">
        Welcome to Our Community
        <span class="block text-lg font-normal text-gray-600 mt-2">Create your account</span>
      </h1>
      
      <form action="/signup" method="POST" class="space-y-6">
        <%- include('../partials/errors') %>
        <div class="grid grid-cols-2 gap-4">
          <div>

            <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
            <input type="text" id="firstName" name="firstName" placeholder="John"
              value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
              class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
          </div>

          <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
            <input type="text" id="lastName" name="lastName" placeholder="Doe"
              value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
              class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" placeholder="you@example.com"
            value="<%= oldInput.email ? oldInput.email : '' %>"
            class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="password" name="password" placeholder="••••••••"
            class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="••••••••"
            class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
        </div>

        <div>
          <label for="userType" class="block text-sm font-medium text-gray-700">I want to</label>
          <select id="userType" name="userType"
            class="mt-1 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition">
            <option value="guest" <%= oldInput.userType === 'guest' ? 'selected' : '' %>>Book a Stay (Guest)</option>
            <option value="host" <%= oldInput.userType === 'host' ? 'selected' : '' %>>Host my Property</option>
          </select>
        </div>

        <div class="flex items-center">
          <input type="checkbox" name="terms" class="h-4 w-4 text-red-500 focus:ring-red-500 border-gray-300 rounded">
          <label class="ml-2 block text-sm text-gray-700"></label>
            I agree to the <a href="#" class="text-red-500 hover:text-red-700">Terms and Conditions</a>
          </label>
        </div>

        <button type="submit" 
          class="w-full bg-red-500 text-white py-3 px-4 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition duration-300 font-medium">
          Create Account
        </button>
      </form>

      <p class="mt-6 text-center text-sm text-gray-600">
        Already have an account? 
        <a href="/login" class="text-red-500 hover:text-red-700 font-medium">Sign in</a>
      </p>
    </div>
  </main>
</body>