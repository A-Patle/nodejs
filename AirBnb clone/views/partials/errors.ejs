<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
<div
  class="max-w-xl mx-auto mt-6 p-5 rounded-2xl bg-red-50 border border-red-300 shadow-md animate-fade-in">
  <div class="flex items-center gap-2 mb-3">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5 text-red-600"
      viewBox="0 0 20 20"
      fill="currentColor">
      <path
        fill-rule="evenodd"
        d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.75a.75.75 0 00-1.5 0v4.5a.75.75 0 001.5 0v-4.5zm0 6.75a.75.75 0 00-1.5 0v.75a.75.75 0 001.5 0v-.75z"
        clip-rule="evenodd" />
    </svg>
    <h3 class="text-lg font-semibold text-red-700">Something went wrong</h3>
  </div>

  <ul class="list-disc list-inside space-y-1 text-red-600 text-sm">
    <% errors.forEach(error => { %>
    <li class="hover:text-red-800 transition-all duration-200"><%= error %></li>
    <% }); %>
  </ul>
</div>
<% } %>
